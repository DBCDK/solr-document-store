{
    "appName": "solr-docstore-updater",
    "jdbc": {
        "jdbc/solr-doc-store": {
            "xa": false,
            "url": "${SOLR_DOC_STORE_DATABASE}",
            "maxSize": "${MAX_POOL_SIZE}"
        }
    },
    "hazelcast": {
        "clusterName": "solr-updater-${SCOPE}",
        "cacheConfig": {
            "*": {
                "timeout": "${CACHE_TIMEOUT}",
                "timeUnit": "Seconds"
            }
        }
    }
}
