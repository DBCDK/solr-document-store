<sun-ejb-jar>
  <enterprise-beans>
    <ejb>
      <ejb-name>CloudIndexer</ejb-name>
      <mdb-resource-adapter>
        <resource-adapter-mid>jmsra</resource-adapter-mid>
        <activation-config>
          <activation-config-property-name>addressList</activation-config-property-name>
          <activation-config-property-value>localhost:1234</activation-config-property-value>
        </activation-config>
      </mdb-resource-adapter>
      <bean-pool>
          <steady-pool-size>2</steady-pool-size>
          <resize-quantity>2</resize-quantity>
          <max-pool-size>4</max-pool-size>
          <pool-idle-timeout-in-seconds>60</pool-idle-timeout-in-seconds>
      </bean-pool>
    </ejb>
  </enterprise-beans>
</sun-ejb-jar>